@{
    ViewData["Title"] = "Update";
}
@model Employee

<div class="card">


    <div class="card-body">
        <h4 class="card-title">İşçi Məlumatlarında Dəyişiklik</h4>
        <p class="card-description">
            Zəhmət olmasa bütün xanaları doldurun.
        </p>
       
        <form method="post" class="forms-sample">
            <div class="form-group">
                <label asp-for="FullName">Ad və Soyad</label>
                <input asp-for="FullName" class="form-control">
            </div>
            <div>
                <span asp-validation-for="FullName" class="text-danger">  </span>
            </div>

            <div class="form-group">
                <label asp-for="FatherName">Ata adı</label>
                <input asp-for="FatherName" class="form-control">
            </div>
            <div>
                <span asp-validation-for="FatherName" class="text-danger">  </span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate">Dogum Tarixi</label>
                <input asp-for="BirthDate" type="date" class="form-control">
            </div>
            <div>
                <span asp-validation-for="BirthDate" class="text-danger">  </span>
            </div>
            <div>
                <label asp-for="Gender">Cins</label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<ManagementSystem.Helper.Helper.Gender>()" class="text-colorblack">
                </select>


            </div>
            <div>
                <span asp-validation-for="Gender" class="text-danger">  </span>
            </div>



            <div class="form-group">
                <label asp-for="PhoneNumber">Mobil nömrə</label>
                <input asp-for="PhoneNumber" class="form-control">
            </div>
            <div>
                <span asp-validation-for="PhoneNumber" class="text-danger">  </span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control">
            </div>
            <div>
                <span asp-validation-for="Email" class="text-danger">  </span>
            </div>
            <div class="form-group">
                <label asp-for="Salary">Maaş</label>
                <input asp-for="Salary" class="form-control">
            </div>
            <div>
                <span asp-validation-for="Salary" class="text-danger">  </span>
            </div>



            <div>
                <div class="form-group">
                    <label>Vəzifə</label>
                    <select class="form-control" name="jobId">

                        @foreach (Job item in ViewBag.Jobs)
                        {
                            if (Model.Job == item)
                            {
                                <option selected value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }

                        }
                 

                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Geriyə</a>

        </form>
    </div>
</div>

@section Css{

    <style type="text/css">

        element.style {
        }


        .text-colorblack {
            padding: 0.4375rem 0.75rem;
            border: 0;
            outline: 1px solid #f3f3f3;
            color: #000000;
        }

    </style>


}

