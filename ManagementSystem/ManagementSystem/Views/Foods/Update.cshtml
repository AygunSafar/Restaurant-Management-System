
@{
    ViewData["Title"] = "Update";
}

@model Food
<div class="raw">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yemək Məlumatlarında Dəyişikliklər</h4>

                    <img src="~/images/@Model.Image" width="100px"style="100px">


                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Photo">Şəkil</label>
                            <input asp-for="Photo" class="form-control">

                        </div>
                        <div>
                            <span asp-validation-for="Photo" class="text-danger mdi-format-font-size-decrease">  </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name">Ad</label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger">  </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ingredients">Tərkib</label>
                            <textarea asp-for="Ingredients" class="form-control"></textarea>
                            <span asp-validation-for="Ingredients" class="text-danger">  </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price">Qiymət</label>
                            <input asp-for="Price" class="form-control">
                            <span asp-validation-for="Price" class="text-danger">  </span>
                        </div>

                        <div>
                            <div class="form-group">
                                <label>Kateqoriya seçin</label>
                                <select class="form-control" name="catId">
                                    @if (ViewBag.FoodCategories != null)
                                    {
                                        @foreach (FoodCategory cat in ViewBag.FoodCategories)
                                        {
                                            if (Model.FoodCategoryId == cat.Id)
                                            {
                                                <option selected value="@cat.Id">@cat.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@cat.Id">@cat.Name</option>
                                            }
                                        }

                                    
                                    }



                                </select>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Təsdiqlə</button>
                        <a asp-action="Index" class="btn btn-secondary text-white">Geriyə</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }


