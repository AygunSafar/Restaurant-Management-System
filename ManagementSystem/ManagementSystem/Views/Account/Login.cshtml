@model LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>PolluxUI Admin</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo" style="display:flex;justify-content:center">
                                <img src="~/images/logo-dark.svg" alt="logo">
                            </div>
                            <h5 style="display:flex;justify-content:center; font-weight:bold"> Restoran İdarə Sisteminə Xoş Gəlmisiniz!</h5>

                            <div asp-validation-summary="ModelOnly" class="text-danger">
                            </div>
                            <form class="pt-3" method="post">

                                <div class="form-group">
                                    <input asp-for="@Model.Username" class="form-control form-control-lg text-secondary" placeholder="İstifadəçi adı">
                                </div>
                                <div>
                                    <span style="font-size:small" asp-validation-for="Username" class="text-danger text"></span>
                                </div>

                                <div class="form-group">
                                    <input asp-for="@Model.Password" class="form-control form-control-lg" placeholder="Şifrə">
                                </div>
                                <div>
                                    <span style="font-size:small" asp-validation-for="Password" class="text-danger"></span>
                                </div>


                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">DAXİL OL</button>
                                </div>


                                <div class="text-center mt-4 font-weight-light">


                                    @if (ViewBag.CheckAdmin == false)
                                    {
                                        <a type="button" id="btn_hide" asp-action="CreateAdmin" class="btn btn-danger btn-rounded btn-fw">
                                            ADMİN YARAT
                                        </a>
                                    }
                                    else
                                    {
                                      
                                        <div class="mt-3 " style="display:flex;justify-content:center">
                                            <a asp-action="ForgotPassword" class="btn btn-danger font-weight-medium auth-form-btn ">ŞİFRƏMİ UNUTDUM</a>
                                        </div>
                                          <div class="form-check">
                                            <label class="form-check-label text-secondary text-left  ">
                                                Xatırla məni
                                                <input type="checkbox" class="form-check-input  ">

                                            </label>
                                        </div>

                                    }


                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="~/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/template.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/todolist.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!-- endinject -->
