
@{
    ViewData["Title"] = "Create";
}

@model Drink
@if (ViewBag.DrinkCategories.Count == 0)
{
    <div class=" card col-md-6 grid-margin stretch-card">
        <div class="card-body">

            <p class="text-danger" style="font-size:medium">
                İçki Yaratmaq üçün əvvəlcə İçki Kategoriyası yaratmalısnız.
            </p>
            <br>
            </br>
            <a asp-controller="DrinkCategories" asp-action="Index" type="button" class="btn btn-info btn-rounded btn-fw"> Kategoriya Yarat </a>
        </div>
    </div>
}
else
{
    <div class="raw">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">İçki Yarat</h4>


                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Photo">Şəkil</label>
                                <input asp-for="Photo" class="form-control">
                                <span style="font-size:small" asp-validation-for="Photo" class="text-danger mdi-format-font-size-decrease">  </span>
                            </div>



                            <div class="form-group">
                                <label asp-for="Name">Ad</label>
                                <input asp-for="Name" class="form-control">
                                <span style="font-size:small" asp-validation-for="Name" class="text-danger">  </span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Ingredients">Tərkib</label>
                                <textarea rows="3" cols="40" wrap="hard" asp-for="Ingredients" class="form-control "></textarea>
                                <span style="font-size:small" asp-validation-for="Ingredients" class="text-danger">  </span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Qiymət</label>
                                <input asp-for="Price " class="form-control">
                                <span style="font-size:small" asp-validation-for="Price" class="text-danger">  </span>
                            </div>

                            <div>
                                <div class="form-group">
                                    <label>Kateqoriya seçin</label>
                                    <select class="form-control" name="catId">
                                        @if (ViewBag.DrinkCategories != null)
                                        {
                                            @foreach (DrinkCategory cat in ViewBag.DrinkCategories)
                                            {
                                                <option value="@cat.Id">@cat.Name</option>
                                            }
                                        }



                                    </select>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary mr-2">Əlavə Et</button>
                            <a asp-action="Index" class="btn btn-secondary text-white">Geriyə</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }
    

