
@{
    ViewData["Title"] = "Index";
}

@model List<Drink>
<div class="raw">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title  font-weight-bolder">İçkilər</h4>
                    <a class="btn btn-primary text-white mx-2 btn-rounded" asp-action="Create">Yarat</a>

                </div>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="font-weight-bold">
                                    Şəkil
                                </th>
                                <th class="font-weight-bold">
                                    Ad
                                </th>

                                <th class="font-weight-bold">
                                    Qiymət
                                </th>

                                <th class="font-weight-bold">
                                    Kateqoriya
                                </th>
                                <th class="font-weight-bold">
                                    Status
                                </th>

                                <th class="text-right font-weight-bold">
                                    Əməliyyatlar
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Drink item in Model)
                            {
                                <tr>
                                    <td>
                                        <img style="width:80px; height:80px; object-fit:cover" src="~/images/@item.Image">
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        @item.Price ₼
                                    </td>
                                    <td>
                                        @item.DrinkCategory.Name
                                    </td>
                                    <td>
                                        @if (item.IsDeactive)
                                        {
                                            <span class="text-danger text-white">Passiv</span>
                                        }
                                        else
                                        {
                                            <span class="text-success text-white">Aktiv</span>
                                        }
                                    </td>

                                    <td>
                                        <div class="d-flex justify-content-end ">
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning text-white mx-2 btn-rounded">
                                                <i class="fa-solid fa-info-circle fa-customize"></i>
                                            </a>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success text-white mx-2 btn-rounded">
                                                <i class="fa-solid fa-pencil-square fa-customize"></i>
                                            </a>
                                            @if (item.IsDeactive)
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-dark text-white mx-2 btn-rounded ">

                                                    <i class="fa-solid fa-trash fa-customize"></i>

                                                </a>

                                            }
                                            else
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger text-white mx-2 btn-rounded  ">

                                                    <i class="fa-solid fa-trash fa-customize"></i>

                                                </a>

                                            }
                                        </div>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Css{
    <style type="text/css">

        element.style {
        }


        .rounded-button {
            width: 20px;
            height: 20px;
            /*   background: #9932cc;*/
            color: #ffffff;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border-radius: 50%;
            border: none;
            text-decoration: none;
            transition: background 0.2s;
            margin: 7px;
        }

        /* .rounded-button:hover {
                                                        #ffffff;

                                                    }*/

        .fa-customize {
            font-size: 25px;
        }
    </style>


}