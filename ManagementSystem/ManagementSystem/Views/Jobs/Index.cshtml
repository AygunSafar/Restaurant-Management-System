@model List<Job>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <h4 class="card-title  font-weight-bolder">Vəzifələr</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <a class="btn btn-primary text-white mx-2 btn-rounded" asp-action="Create">Yarat</a>

            </div>

            <div class="table-responsive pt-2">
                <table class="table table-bordered ">
                    <thead class=" tableth ">
                        <tr >

                            <th style="font-weight:bold">
                                Vəzifə adı
                            </th>

                            <th style="font-weight:bold">
                                Status
                            </th>
                            <th style="font-weight:bold">
                                Əməliyyatlar
                            </th>


                        </tr>
                    </thead>
            
                    <tbody>
                        @foreach (Job item in Model)
                        {
                            <tr class="tabletd">

                                <td>
                                    @item.Name
                                </td>

                                <td>
                                    @if (item.IsDeactive)
                                    {
                                        <span class="text-danger text-white">Mövcud deyil</span>
                                    }
                                    else
                                    {
                                        <span class="text-success text-white">Mövcuddur</span>
                                    }
                                </td>


                                <td>
                                    <div class="d-flex justify-content-end ">

                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary rounded-button ">
                                            <i class="fa-solid fa-wrench fa-customize"></i>
                                        </a>


                                        @if (item.Name != User.Identity.Name)
                                        {


                                            @if (item.IsDeactive)
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-dark rounded-button  ">

                                                    <i class="fa-solid fa-trash fa-customize"></i>

                                                </a>
                                              
                                            }
                                            else
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger rounded-button  ">

                                                    <i class="fa-solid fa-trash fa-customize"></i>

                                                </a>

                                            }
                                        }
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Css{
    <style type="text/css">

        element.style {
        }


        .rounded-button {
            width: 20px;
            height: 20px;
         /*   background: #9932cc;*/
            color: #ffffff;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border-radius: 50%;
            border: none;
            text-decoration: none;
            transition: background 0.2s;
            margin: 7px;
        }

       

    

        .fa-customize {
            font-size: 15px;
        }

    </style>


}
